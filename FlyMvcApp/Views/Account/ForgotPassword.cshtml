
@{
    ViewBag.Title = "ForgotPassword";
}
@Html.ValidationSummary()
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ucak Bileti</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="https://kit.fontawesome.com/d7dd4d6052.js" crossorigin="anonymous"></script>

    <style>
    </style>
</head>
<body style="font-family: 'Rubik', sans-serif;">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">

        <div class="container">

            <ul class="navbar-nav">

                <li class="nav-item">
                    <a href="/" class="nav-link">Bilet Ara</a>
                </li>
                <li class="nav-item">
                    <a href="/" class="nav-link">Seferler</a>
                </li>
            </ul>

            @if (User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <h5><a href="#" class="badge badge-warning mr-md-4" style="margin-top:8px;">@User.Identity.Name</a></h5>
                    </li>
                    <li>
                        <h5><a href="/Account/Logout" class="badge badge-danger my-2 my-md-0" style="">Çıkış</a></h5>
                    </li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Account/Register" class="btn btn-outline-light mr-sm-2">Üye Ol</a></li>
                    <li><a href="/Account/Login" class="btn btn-outline-light my-2 my-sm-0">Giriş Yap</a></li>
                </ul>
            }
        </div>
    </nav>


    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {

        @Html.AntiForgeryToken()

        <div class="container-md" style="max-width: 800px; margin-top: 120px; margin-bottom:40px;">
            <div class="clearfix">
                <div class="w-50 float-left">
                    <div class="form-group">


                        <h2>Şifremi Unuttum!</h2>
                        <hr />
                        <div class="form-group">
                            <input type="email" name="Email"  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="E-Posya Adresiniz ">
                            
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Gönder" class="btn btn-success" />
                        </div>

                    </div>
                </div>
            </div>

        </div>
    }
</body>
</html>
