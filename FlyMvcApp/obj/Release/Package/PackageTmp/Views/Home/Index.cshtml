                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input onclick="disable()" class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2" checked>
                                <label class="form-check-label text-dark" for="exampleRadios2" style="font-family: 'Rubik', sans-serif;">
                                    GİDİŞ-DÖNÜŞ
                                </label>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    }
    @using (Html.BeginForm("SonucEkrani", "Home", FormMethod.Post))
    {
        <div id="about" class="" style="padding-bottom: 50px; padding-top: 50px; font-family: 'Rubik', sans-serif;">
            <div class="container">
                <div class="container body-content">
                    <div class="row">
                        <div class="col-md-12">
                            <h1></h1>
                            <h2 style="padding-left: 35%;">Popüler Uçak Seferleri</h2>
                            <h1></h1>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Hava Yolu
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nereden)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nereye)
                                        </th>
                                        <th>
                                            Gidiş Tarihi

                                        </th>
                                        <th>
                                            Saat
                                        </th>
                                        <th>
                                            Uçuş Süresi
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Fiyat)
                                        </th>
                                        <th></th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int i = 0;}
                                    @foreach (var item in Model)
                                    {
                                        if (i < 10)
                                        {
                                            <tr>
                                                <td>
                                                    @if (item.HavaYolu == "THY")
                                                    {
                                                        <img src="~/img/thy2.jpg" alt="..." class="img-thumbnail float-left" style="width:100px; height:50px; border:none;">

                                                    }
                                                    @if (item.HavaYolu == "Pegasus")
                                                    {
                                                        <img src="~/img/pegasus.jpg" alt="..." class="img-thumbnail float-left" style="width:100px; height:50px; border:none;">

                                                    }
                                                    @if (item.HavaYolu == "SunExpress")
                                                    {
                                                        <img src="~/img/sun.png" alt="..." class="img-thumbnail float-left" style="width:100px; height:50px; border:none;">

                                                    }

                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nereden)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nereye)
                                                </td>
                                                <td>
                                                    @item.GidisTarihi.Substring(0, 10)
                                                </td>
                                                <td>
                                                    @item.GidisTarihi.Remove(0, 10)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UcusSuresi)
                                                </td>
                                                <td>
                                                    <label class="btn btn-warning">@Html.DisplayFor(modelItem => item.Fiyat)</label>

                                                </td>
                                                <td>
                                                    <button class="btn btn-danger" type="submit" name="HavaYolu" value="@item.HavaYolu,@item.Nereden,@item.Nereye,@item.GidisTarihi,@item.UcusSuresi,@item.Fiyat">Seç</button>

                                                </td>

                                            </tr>
                                        }


                                        i++;

                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>


    <script>
        function disable() {
            document.getElementById("donusTarihi").disabled = false;
        }

        function undisable() {
            document.getElementById("donusTarihi").disabled = true;
        }
    </script>


</body>
</html>
}
